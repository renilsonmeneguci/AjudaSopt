@model Mensagem.Models.DMensagensMetadado

@{
    ViewBag.Title = "Mensagem";
}

<h2>Mensagem</h2>

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>DMensagensMetadado</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
      
        @Html.HiddenFor(model => model.idtopico)
        @Html.HiddenFor(model => model.idlogin)
        @Html.HiddenFor(model => model.iddisc)

   
        <div class="form-group">
            @Html.LabelFor(model => model.fptg_mensagem, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextAreaFor(model => model.fptg_mensagem, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.fptg_mensagem, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Enviar" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
